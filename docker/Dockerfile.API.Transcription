# Dockerfile for ConvoContentBuddy.API.Transcription
FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS base
USER app
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["src/ConvoContentBuddy.API.Transcription/ConvoContentBuddy.API.Transcription/ConvoContentBuddy.API.Transcription.csproj", "src/ConvoContentBuddy.API.Transcription/ConvoContentBuddy.API.Transcription/"]
COPY ["src/ConvoContentBuddy.ServiceDefaults/ConvoContentBuddy.ServiceDefaults/ConvoContentBuddy.ServiceDefaults.csproj", "src/ConvoContentBuddy.ServiceDefaults/ConvoContentBuddy.ServiceDefaults/"]
COPY ["src/ConvoContentBuddy.Shared/ConvoContentBuddy.Shared/ConvoContentBuddy.Shared.csproj", "src/ConvoContentBuddy.Shared/ConvoContentBuddy.Shared/"]
RUN dotnet restore "src/ConvoContentBuddy.API.Transcription/ConvoContentBuddy.API.Transcription/ConvoContentBuddy.API.Transcription.csproj"

COPY . .
WORKDIR "/src/src/ConvoContentBuddy.API.Transcription/ConvoContentBuddy.API.Transcription"
RUN dotnet build "ConvoContentBuddy.API.Transcription.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "ConvoContentBuddy.API.Transcription.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ConvoContentBuddy.API.Transcription.dll"]
